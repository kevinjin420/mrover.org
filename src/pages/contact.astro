---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - University of Michigan Mars Rover Team">
  <!-- Hero -->
  <div class="relative h-96 md:h-[500px] lg:h-[600px] bg-cover bg-center" style="background-image: url('/images/festifall2022.jpg');">
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Contact Info -->
  <section class="py-16 md:py-20 bg-background">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <!-- Team Contact -->
      <div class="mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-text mb-6">The Team</h2>
        <div class="space-y-2 text-grey-dark">
          <p><a href="mailto:rover@umich.edu" class="text-mrover-blue hover:underline">rover@umich.edu</a></p>
          <p>University of Michigan</p>
          <p>Wilson Student Team Project Center</p>
          <p>2603 Draper, Ann Arbor, MI 48109-2101</p>
        </div>
      </div>

      <!-- Executive Board -->
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-text mb-12">Executive Board</h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <!-- President -->
          <div class="space-y-2">
            <h3 class="text-xl font-semibold text-text">President</h3>
            <p class="text-grey-dark">Isabel Boncher</p>
            <p><a href="mailto:iboncher@umich.edu" class="text-mrover-blue hover:underline text-sm">iboncher@umich.edu</a></p>
          </div>

          <!-- Vice President -->
          <div class="space-y-2">
            <h3 class="text-xl font-semibold text-text">Vice President</h3>
            <p class="text-grey-dark">Caden Burkhardt</p>
            <p><a href="mailto:cadenb@umich.edu" class="text-mrover-blue hover:underline text-sm">cadenb@umich.edu</a></p>
          </div>

          <!-- Chief Engineer -->
          <div class="space-y-2">
            <h3 class="text-xl font-semibold text-text">Chief Engineer</h3>
            <p class="text-grey-dark">Neven Johnson</p>
            <p><a href="mailto:neven@umich.edu" class="text-mrover-blue hover:underline text-sm">neven@umich.edu</a></p>
          </div>

          <!-- External Relations Officer -->
          <div class="space-y-2">
            <h3 class="text-xl font-semibold text-text">External Relations Officer</h3>
            <p class="text-grey-dark">Riya Desai</p>
            <p><a href="mailto:riyad@umich.edu" class="text-mrover-blue hover:underline text-sm">riyad@umich.edu</a></p>
          </div>

          <!-- Treasurer -->
          <div class="space-y-2">
            <h3 class="text-xl font-semibold text-text">Treasurer</h3>
            <p class="text-grey-dark">Vanya Krishna</p>
            <p><a href="mailto:vanyak@umich.edu" class="text-mrover-blue hover:underline text-sm">vanyak@umich.edu</a></p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
